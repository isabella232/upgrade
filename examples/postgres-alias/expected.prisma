datasource db {
  provider = "postgresql"
  url      = "postgres://m@localhost:5432/prisma_test?schema=postgres-alias%24dev"
}

model Category {
  id      String    @default(cuid()) @id
  name    String
  Message Message[] @relation("CategoryToMessage", references: [id])
}

model Message {
  authorId   String?
  content    String?
  created_at DateTime   @default(now()) @map("createdAt")
  id         String     @default(cuid()) @id
  published  Boolean    @default(false)
  slug       String     @map("title")
  updatedAt  DateTime   @updatedAt
  User       User?      @relation(fields: [authorId], references: [id])
  Category   Category[] @relation("CategoryToMessage", references: [id])
  @@map("Post")
}

model Profile {
  bio  String?
  id   String  @default(cuid()) @id
  user String? @unique
  User User    @relation(fields: [user], references: [id])
}

model User {
  email    String?   @unique
  id       String    @default(cuid()) @id
  settings Json?     @map("jsonData")
  name     String
  role     Role      @default(CUSTOMER)
  Message  Message[]
  Profile  Profile?
}

enum Role {
  ADMIN
  CUSTOMER
}