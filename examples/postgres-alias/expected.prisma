model Category {
  id      String    @default(cuid()) @id
  name    String
  Message Message[] @relation("CategoryToMessage", references: [id])
}

model Message {
  id         String     @default(cuid()) @id
  created_at DateTime   @default(now()) @map("createdAt")
  updatedAt  DateTime   @updatedAt
  slug       String     @map("title")
  content    String?
  published  Boolean    @default(false)
  authorId   String?
  User       User?      @relation(fields: [authorId], references: [id])
  Category   Category[] @relation("CategoryToMessage", references: [id])
  @@map("Post")
}

model Profile {
  id   String  @default(cuid()) @id
  bio  String?
  user String? @unique
  User User    @relation(fields: [user], references: [id])
}

model User {
  id       String    @default(cuid()) @id
  email    String?   @unique
  name     String
  role     Role      @default(CUSTOMER)
  settings Json?     @map("jsonData")
  Message  Message[]
  Profile  Profile?
}

enum Role {
  ADMIN
  CUSTOMER
}