datasource db {
  provider = "postgresql"
  url      = "postgres://m@localhost:5432/prisma_test?schema=postgres-env%24dev"
}

model Category {
  id   String @default(cuid()) @id
  name String
  Post Post[] @relation(references: [id])
}

model Post {
  content   String?
  createdAt DateTime   @default(now())
  id        String     @default(cuid()) @id
  published Boolean    @default(false)
  title     String
  updatedAt DateTime   @updatedAt
  Category  Category[] @relation(references: [id])
  User      User[]     @relation(references: [id])
}

model Profile {
  bio  String?
  id   String  @default(cuid()) @id
  user String? @unique
  User User    @relation(fields: [user], references: [id])
}

model User {
  email    String?  @unique
  id       String   @default(cuid()) @id
  jsonData Json?
  name     String
  role     Role     @default(CUSTOMER)
  Profile  Profile?
  Post     Post[]   @relation(references: [id])
}

enum Role {
  ADMIN
  CUSTOMER
}