datasource db {
  provider = "mysql"
  url      = "mysql://root@localhost:3306/prisma_test"
}

model AUser {
  createdAt DateTime
  id        String   @default(cuid()) @id
  updatedAt DateTime
  Post      Post[]
}

model Post {
  authorId  String?
  createdAt DateTime
  id        String   @default(cuid()) @id
  updatedAt DateTime
  AUser     AUser?   @relation(fields: [authorId], references: [id])
  @@index([authorId], name: "author")
}