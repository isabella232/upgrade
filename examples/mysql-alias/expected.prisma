datasource db {
  provider = "mysql"
  url      = "mysql://root@localhost:3306/prisma_test"
}

model Category {
  id      String    @default(cuid()) @id
  name    String
  Message Message[] @relation("CategoryToMessage", references: [id])
}

model Message {
  content    String?
  created_at DateTime   @default(now()) @map("createdAt")
  id         String     @default(cuid()) @id
  published  Boolean    @default(false)
  slug       String     @map("title")
  updatedAt  DateTime   @updatedAt
  Category   Category[] @relation("CategoryToMessage", references: [id])
  User       User[]     @relation("MessageToUser", references: [id])
  @@map("Post")
}

model Profile {
  bio  String?
  id   String  @default(cuid()) @id
  user String? @unique
  User User    @relation(fields: [user], references: [id])
  @@index([user], name: "user")
}

model User {
  email    String?   @unique
  id       String    @default(cuid()) @id
  settings Json?     @map("jsonData")
  name     String
  role     User_role @default(CUSTOMER)
  Profile  Profile?
  Message  Message[] @relation("MessageToUser", references: [id])
}

enum User_role {
  ADMIN
  CUSTOMER
}