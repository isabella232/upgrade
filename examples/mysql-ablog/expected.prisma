datasource db {
  provider = "mysql"
  url      = "mysql://root@localhost:3306/prisma"
}

model Category {
  id   String @default(cuid()) @id
  name String
  Post Post[] @relation(references: [id])
}

model Post {
  content   String?
  createdAt DateTime
  id        String     @default(cuid()) @id
  published Boolean
  title     String
  updatedAt DateTime
  Category  Category[] @relation(references: [id])
  User      User[]     @relation(references: [id])
}

model Profile {
  bio  String?
  id   String  @default(cuid()) @id
  user String?
  User User?   @relation(fields: [user], references: [id])
  @@index([user], name: "user")
}

model User {
  email    String?   @unique
  id       String    @default(cuid()) @id
  jsonData String?
  name     String
  role     String
  Profile  Profile[]
  Post     Post[]    @relation(references: [id])
}