datasource db {
  provider = "postgresql"
  url      = "postgres://m@localhost:5432/prisma_test?schema=postgres1-all%24dev"
}

model Category {
  createdAt DateTime
  id        String   @default(cuid()) @id
  name      String
  updatedAt DateTime
  Post      Post[]   @relation(references: [id])
}

model Post {
  authorId  String?
  content   String?
  createdAt DateTime   @default(now())
  id        String     @default(cuid()) @id
  published Boolean    @default(false)
  title     String
  updatedAt DateTime   @updatedAt
  User      User?      @relation(fields: [authorId], references: [id])
  Category  Category[] @relation(references: [id])
}

model Profile {
  bio       String?
  createdAt DateTime
  id        String   @default(cuid()) @id
  updatedAt DateTime
  userId    String   @unique
  User      User     @relation(fields: [userId], references: [id])
}

model User {
  createdAt DateTime
  email     String?  @unique
  id        String   @default(cuid()) @id
  jsonData  Json?
  name      String
  role      Role     @default(CUSTOMER)
  updatedAt DateTime
  Post      Post[]
  Profile   Profile?
}

enum Role {
  ADMIN
  CUSTOMER
}